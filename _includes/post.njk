---
layout: default.njk
---

<article class="">
  <h1 class="mb-8">{{title}}</h1>

  {% if publishedDate %}
  <p class="text-secondary text-sm">
    Published: {{publishedDate}} {% endif %} {% if updatedDate %} â€¢ Last
    updated: {{updatedDate}}
  </p>
  {% endif %}

  <ul class="flex items-center flex-wrap gap-4 mt-4 mb-6">
    {% for tech in techStack %}
    <li class="chip">{{tech}}</li>
    {% endfor %}
  </ul>

  <hr />
  <details class="mt-8" open>
    <summary class="mb-4">Table of Contents</summary>
    <aside
      class="border border-solid border-secondary px-4 py-6 rounded bg-slate-200 dark:bg-slate-900"
    >
      {{ content | toc | safe }}
    </aside>
  </details>

  <div class="mt-16 article-content">{{ content | safe }}</div>
</article>
